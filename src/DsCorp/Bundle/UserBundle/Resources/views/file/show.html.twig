{% extends '::base.html.twig' %}

{% block body -%}
    <h1>file</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ entity.file }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ entity.path }}</td>
            </tr>
            <tr>
                <th>Metatags</th>
                <td>{{ entity.metatags }}</td>
            </tr>
            <tr>
                <th>Dateupdate</th>
                <td>{{ entity.dateUpdate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('file') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('file_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
